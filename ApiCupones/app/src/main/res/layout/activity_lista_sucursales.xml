<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListaSucursalesActivity">
    <TextView
        android:id="@+id/tv_titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:textStyle="bold"
        android:textSize="18dp"
        android:text="Lista de sucursales participantes "/>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_sucursales"
        android:layout_width="match_parent"
        android:layout_height="515dp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="182dp" />

    <TextView
        android:id="@+id/tv_sin_sucursales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lo_sentimos_no_hay_sucursales_donde_aplique_esta_promocion"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center_vertical"
        android:textColor="@color/purple"
        android:layout_centerInParent="true"/>
</RelativeLayout>